    <!-- Base application theme. -->
    <style name="AppThemeDay" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text_material_day</item>
        <item name="android:colorBackground">@color/background_material_day</item>
        <!--<item name="android:buttonStyle">@style/MyBtnStyle</item>-->
        <!--<item name="android:windowBackground">@android:color/white</item>-->
    </style>

    <style name="AppThemeNight" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppThemeDay.Translucent">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--&lt;!&ndash;   your app's branding color (for the app bar) &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--&lt;!&ndash;   darker variant of colorPrimary (for status bar, contextual app bars) &ndash;&gt;-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--&lt;!&ndash;   theme UI controls like checkboxes and text fields &ndash;&gt;-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowContentOverlay">@android:color/transparent</item>-->
    </style>

    <!--欢迎页，或者广告页，不区分白天晚上。-->
    <style name="AppThemeDay.Translucent.Welcome">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
        <!--默认没有bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDay.NoneTranslucent">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppThemeDay.NoneActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDay.NoneTranslucent.Main">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
    </style>

    <style name="AppThemeNight.Translucent">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeNight.NoneTranslucent">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppThemeNight.NoneActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNight.NoneTranslucent.Main">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
    </style>

    <style name="GlpTest" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>
